<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SmokeTests" parallel="methods" thread-count="2">
    <parameter name="BaseURL" value="https://qa.koel.app/"></parameter>
    <test name="Smoke Tests" preserve-order="false">
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="validPasswordAndEmail"/>
                </methods>
            </class>

            <class name="tests.SongsTests">
                <methods>
                    <include name="playSong"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>